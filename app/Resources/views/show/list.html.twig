{%  extends "base_logged.html.twig" %}

{% block title %}
    Let them show
{% endblock %}

{% block page_title %}
    Let them show
{%  endblock %}

{% block title_icon %}
    list
{% endblock %}

{% block content %}

    <div id="shows_list" class="ui link special cards centered">
        {% for show in shows %}
            <div class="ui card">
                <div class="blurring dimmable image">
                    <div class="ui dimmer">
                        <div class="content">
                            <div class="center">
                                <a href="{{ path('show_see', {'id': show.id}) }}" class="ui inverted button">Voir le cours</a>
                            </div>
                        </div>
                    </div>
                    <img src="{{ asset('Resources/images/board.png') }}" />
                </div>

                <div class="content">
                    <img class="ui avatar image" src="{{ asset('Resources/images/nan.jpg') }}"> {{ show.author.username }}
                </div>

                <div class="content">
                    Nom du cours : {{ show.name }}
                </div>


                <div class="content">
                    <div class="right floated meta"><i class="wait full icon"></i>{{ show.duration }}s</div>

                    <i class="tag icon"></i>
                    {{ show.category.name }}
                </div>
                <div class="extra content">
                    <div class="ui large transparent left icon input">
                        Difficult√©
                    </div>
                    <span class="right floated">
                        {%  if show.level > 0 %}
                            {% for i in 1..show.level  %}
                                <i class="circle icon"></i>
                            {% endfor %}
                        {% endif %}
                        {% if show.level < 5 %}
                            {% for i in 1..(5 - show.level) %}
                                <i class="circle thin icon"></i>
                            {% endfor %}
                        {% endif %}
                   </span>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block additionnal_js %}
    {{ parent() }}
    <script>
        $(function(){
            $('.special.cards .image').dimmer({
                on: 'hover'
            });
        });
    </script>
{% endblock %}